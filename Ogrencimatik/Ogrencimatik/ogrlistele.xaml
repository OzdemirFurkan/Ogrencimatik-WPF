            <TextBox x:Name="txtogrlsnara" HorizontalAlignment="Left" Height="54" Margin="10,24,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="60"/>
        </GroupBox>
        <TextBox x:Name="txtogrlsara" HorizontalAlignment="Left" Height="54" Margin="96,190,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="362" TextChanged="txtogrlsara_TextChanged" />
        <Label x:Name="label" Content="No" HorizontalAlignment="Left" Margin="39,166,0,0" VerticalAlignment="Top" FontSize="18" Foreground="#FF27AE60" RenderTransformOrigin="0.412,0.103"/>
        <Label x:Name="label1" Content="İsim" HorizontalAlignment="Left" Margin="125,166,0,0" VerticalAlignment="Top" FontSize="18" Foreground="#FF27AE60" RenderTransformOrigin="0.69,0.368"/>
        <DataGrid x:Name="dataGrid" HorizontalAlignment="Left" Height="246" Margin="10,286,0,0" VerticalAlignment="Top" Width="908" SelectionChanged="dataGrid_SelectionChanged"/>


    </Grid>
</Window>
